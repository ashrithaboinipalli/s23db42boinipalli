extends layout

block content
  h1= title
  p
   - let result=results
    div(class="container-fliud")
        div(class="row")
            each item,ind in result 
                div(class="col-sm-2" onclick=`buy(${ind})`)  
                    p Name  #{item.Book_Name}
                    p $   #{item.Book_rate}
                    p Author  #{item.Author}
    each ite,index in result
        p value at index #{index} is : #{ite.Book_Name},#{ite.Book_rate},#{ite.Author}
    script. 
        function buy(i){
            alert("You purchased item "+(i+1))
        }                
                

   